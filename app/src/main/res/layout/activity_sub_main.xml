<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".SubMainActivity">

    <LinearLayout
        android:id="@+id/home_lin1"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:background="#ffe734"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/home_admin_logo"
            android:layout_width="166dp"
            android:layout_height="148dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="134dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp"
            android:layout_gravity="center"
            android:src="@drawable/owner" />

        <TextView
            android:id="@+id/home_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/home_lin2"
        android:layout_width="match_parent"
        android:layout_height="243dp"
        android:background="#34f5ff"
        android:layout_below="@+id/home_lin1"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_waiter_logo"
            android:layout_width="166dp"
            android:layout_height="148dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="134dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp"
            android:layout_gravity="center"
            android:src="@drawable/waiter" />

        <TextView
            android:id="@+id/home_waiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Waiter"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:background="#ff8287"
        android:layout_below="@+id/home_lin2"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/home_cheff_logo"
            android:layout_width="166dp"
            android:layout_height="148dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="134dp"
            android:layout_marginLeft="134dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="135dp"
            android:layout_marginRight="135dp"
            android:layout_gravity="center"
            android:src="@drawable/cheff" />

        <TextView
            android:id="@+id/home_cheff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cheff"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>